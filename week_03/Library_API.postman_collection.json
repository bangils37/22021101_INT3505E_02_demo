    "item": [
        {
            "name": "Books Management",
            "item": [
                {
                    "name": "Get All Books",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/books",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "books"]
                        },
                        "description": "[F4] Lấy danh sách tất cả sách"
                    }
                },
                {
                    "name": "Add New Book",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Clean Code\",\n    \"author\": \"Robert C. Martin\",\n    \"total_copies\": 5\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/books",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "books"]
                        },
                        "description": "[F1] Thêm sách mới"
                    }
                },
                {
                    "name": "Get Book by ID",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/books/1",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "books", "1"]
                        },
                        "description": "[F5] Lấy thông tin chi tiết của một sách"
                    }
                },
                {
                    "name": "Update Book",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"title\": \"Clean Code: Updated\",\n    \"author\": \"Robert C. Martin\",\n    \"total_copies\": 6\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/books/1",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "books", "1"]
                        },
                        "description": "[F2] Sửa thông tin sách"
                    }
                },
                {
                    "name": "Delete Book",
                    "request": {
                        "method": "DELETE",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/books/1",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "books", "1"]
                        },
                        "description": "[F3] Xóa sách"
                    }
                }
            ]
        },
        {
            "name": "Borrowing Management",
            "item": [
                {
                    "name": "Borrow Book",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"user_id\": 1,\n    \"book_id\": 1\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/borrows",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "borrows"]
                        },
                        "description": "[F6] Mượn sách (giảm số lượng available)"
                    }
                },
                {
                    "name": "Return Book",
                    "request": {
                        "method": "PUT",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/borrows/1/return",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "borrows", "1", "return"]
                        },
                        "description": "[F7] Trả sách (tăng số lượng available)"
                    }
                },
                {
                    "name": "Get All Borrows",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/borrows",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "borrows"]
                        },
                        "description": "[F8] Lấy danh sách các bản ghi mượn"
                    }
                },
                {
                    "name": "Get Borrows by User",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/borrows?user_id=1",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "borrows"],
                            "query": [
                                {
                                    "key": "user_id",
                                    "value": "1"
                                }
                            ]
                        },
                        "description": "Lấy danh sách mượn theo user ID"
                    }
                },
                {
                    "name": "Get Borrows by Status",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/borrows?status=borrowed",
                            "host": ["{{baseUrl}}"],
                            "path": ["api", "v1", "borrows"],
                            "query": [
                                {
                                    "key": "status",
                                    "value": "borrowed"
                                }
                            ]
                        },
                        "description": "Lấy danh sách mượn theo trạng thái"
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:5000",
            "type": "string"
        }
    ]
}