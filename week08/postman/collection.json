{
  "info": {
    "name": "Product API Week08 Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Test suite cho 5 endpoints: GET/POST /products, GET/PUT/DELETE /products/{id}"
  },
  "item": [
    {
      "name": "POST /products - Tạo sản phẩm",
      "request": {
        "method": "POST",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "url": {
          "raw": "{{baseUrl}}/products",
          "host": ["{{baseUrl}}"],
          "path": ["products"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test Product\",\n  \"price\": 12345000,\n  \"description\": \"Sample product\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200 (server behavior)', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
              "const json = pm.response.json();",
              "pm.test('Has id, name, price', function () {",
              "  pm.expect(json).to.have.property('id');",
              "  pm.expect(json).to.have.property('name');",
              "  pm.expect(json).to.have.property('price');",
              "});",
              "pm.environment.set('productId', json.id);"
            ]
          }
        }
      ]
    },
    {
      "name": "GET /products - Danh sách sản phẩm",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/products",
          "host": ["{{baseUrl}}"],
          "path": ["products"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "const json = pm.response.json();",
              "pm.test('Response is array and has at least 1 item', function () {",
              "  pm.expect(Array.isArray(json)).to.be.true;",
              "  pm.expect(json.length).to.be.above(0);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "GET /products/{id} - Lấy theo ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["products", "{{productId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "const json = pm.response.json();",
              "pm.test('Returned product matches productId', function () {",
              "  pm.expect(json.id).to.eql(pm.environment.get('productId'));",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "PUT /products/{id} - Cập nhật sản phẩm",
      "request": {
        "method": "PUT",
        "header": [{"key":"Content-Type","value":"application/json"}],
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["products", "{{productId}}"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Product\",\n  \"price\": 22222000,\n  \"description\": \"Updated desc\"\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "const json = pm.response.json();",
              "pm.test('Name updated correctly', function () {",
              "  pm.expect(json.name).to.eql('Updated Product');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "DELETE /products/{id} - Xóa sản phẩm",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/products/{{productId}}",
          "host": ["{{baseUrl}}"],
          "path": ["products", "{{productId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200 (server behavior)', function () {",
              "  pm.response.to.have.status(200);",
              "});"
            ]
          }
        }
      ]
    }
  ]
}