{
	"info": {
		"name": "Simple Library API",
		"description": "Demo Library Management API - Week 03",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Books",
			"item": [
				{
					"name": "Get All Books",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:5000/api/v1/books",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "books"]
						}
					}
				},
				{
					"name": "Add New Book",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"title\": \"Clean Code\",\n    \"author\": \"Robert C. Martin\",\n    \"total_copies\": 5\n}"
						},
						"url": {
							"raw": "http://localhost:5000/api/v1/books",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "books"]
						}
					}
				},
				{
					"name": "Get Book by ID",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:5000/api/v1/books/1",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "books", "1"]
						}
					}
				}
			]
		},
		{
			"name": "Borrowing",
			"item": [
				{
					"name": "Borrow Book",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"user_id\": 1,\n    \"book_id\": 1\n}"
						},
						"url": {
							"raw": "http://localhost:5000/api/v1/borrows",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "borrows"]
						}
					}
				},
				{
					"name": "Get All Borrows",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "http://localhost:5000/api/v1/borrows",
							"protocol": "http",
							"host": ["localhost"],
							"port": "5000",
							"path": ["api", "v1", "borrows"]
						}
					}
				}
			]
		}
	]
